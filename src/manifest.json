{
    "manifest_version": 3,

    "name": "jiraclip",
    "description": "Copies a jira ticket ID, title, and link to the clipboard.",
    "version": "1.0",
    "icons": {
        "16": "extension_toolbar_icon16.png",
        "48": "extension_toolbar_icon48.png",
        "128": "extension_toolbar_icon128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "clipboardWrite"
    ]
}